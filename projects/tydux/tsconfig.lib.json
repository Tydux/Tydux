{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "."
    //    "plugins": [
    //      {
    //        "name": "typescript-tslint-plugin",
    //        "ignoreDefinitionFiles": true,
    //        "configFile": "./tslint.hard.json",
    //        "suppressWhileTypeErrorsPresent": true
    //      }
    //    ]
  },
  "include": [
    "src/**/*"
  ]
}
